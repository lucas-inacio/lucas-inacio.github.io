<!-- Ativo apenas em telas md e acima. -->
<div class="text-center list-group col-md-4 d-none d-md-block">
    <div class="sticky-top" style="top: 200px;">    
        <% for (let i in theme.menu) { %>
            <a class="list-group-item" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
    </div>
</div>

<!-- Ativo apenas em telas pequenas. Menu lateral retrÃ¡til. -->
<button class="btn btn-primary fixed-bottom d-block d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideBar" aria-controls="sideBar">
    Toggle right offcanvas
</button>
<div class="offcanvas offcanvas-end" tabindex="-1" id="sideBar">
    <div class="offcanvas-header">
        <h3>Header</h3>
        <button type="button" class="btn-close text-reset float-start" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="text-center list-group">
            <% for (let i in theme.menu) { %>
                    <a class="list-group-item" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
            <% } %>
        </div>
    </div>
</div>