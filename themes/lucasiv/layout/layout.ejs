<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title><%= config.title %></title>
        <%- css('bootstrap/css/bootstrap.min.css') %>
        <%- css('prism/prism.css') %>
        <%- js('bootstrap/js/bootstrap.bundle.min.js') %>
    </head>
    <body>
        <div class="main">
            <div class="container-fluid sticky-top bg-light shadow">
                <h1 class="container title">
                    <%= config.title %>
                </h1>
                <p class="container text-secondary"><%= config.subtitle %></p>
                <%- partial('_partial/menu') %>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <%- body %>
                    </div>
                    <%- partial('_partial/sidebar') %>
                </div>
            </div>
        </div>
        <%- js('prism/prism.js') %>
    </body>
</html>